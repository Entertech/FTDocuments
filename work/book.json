{
    "title": "心流-帮助中心",
    "author": "回车科技",
    "description": "心流是一款拥有双通道脑电+心率的头环，可以实现对冥想状态的监测以及对专注度、疲劳度、情绪情感等状态的识别。",
    "language": "zh-hans",
    "gitbook": "3.2.3",
    "plugins": [
        "-sharing",
        "-lunr", 
        "-search", 
        "-fontsettings",
        "theme-fexa",
        "anchors",
        "image-captions",
        "back-to-top-button",
        "cuav-chapters",
        "code",
        "search-pro",
        "advanced-emoji",
        "emphasize",
        "splitter",
        "tbfed-pagefooter",
        "klipse",
        "flexible-alerts",
        "auto-scroll-table",
        "lightbox",
        "image-div"
    ],
    "variables": {
        "themeFexa":{
            "nav":[
                {
                    "url":"https://www.entertech.cn",
                    "target":"_blank",
                    "name": "回车官网"
                },
                {
                    "url":"https://docs.affectivecloud.cn",
                    "target":"_blank",
                    "name": "心流开发者文档"
                }
            ]
        }
    },
    "pluginsConfig": {
        "code": {
            "copyButtons": true
        },
        "flexible-alerts": {
            "style": "flat",
            "note": {
                "label": "注意"
            },
            "tip": {
                "label": "提示"
            },
            "warning": {
                "label": "警告"
            },
            "danger": {
                "label": "危险"
            }
        },
        "theme-fexa":{
            "search-placeholder":"输入关键字搜索",
            "logo":"./logo.png",
            "favicon": "./favicon.png"
        },
        "tbfed-pagefooter": {
            "copyright":"© Entertech 2019",
            "modify_label": "该文件修订时间：",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
        }
    },
    "styles": {
        "website": "styles/website.css"
    }
}
